# Production Environment Configuration
# Claude Marketplace Registry - Production Build

# Node Environment
NODE_ENV=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://shrwnsan.github.io/claude-marketplace-registry
NEXT_PUBLIC_GITHUB_REPO=shrwnsan/claude-marketplace-registry

# Scanning Configuration
GITHUB_RATE_LIMIT=5000
CACHE_TTL=3600
ENABLE_CACHE=true

# Search Configuration
SEARCH_QUERY=claude-plugin+marketplace.json
SEARCH_RESULTS_LIMIT=100
SEARCH_SORT=updated
SEARCH_ORDER=desc

# Plugin Validation
VALIDATION_STRICT_MODE=true
VALIDATION_TIMEOUT=30000

# Data Generation
DATA_REFRESH_INTERVAL=6
MAX_MARKETPLACES=1000
MAX_PLUGINS_PER_MARKETPLACE=500

# Error Handling
ENABLE_ERROR_LOGGING=true
ERROR_NOTIFICATION_WEBHOOK=

# Analytics
GOOGLE_ANALYTICS_ID=
UMAMI_WEBSITE_ID=
UMAMI_URL=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DARK_MODE=true
ENABLE_SEARCH=true
ENABLE_FILTERING=true
ENABLE_SORTING=true

# API Configuration
API_BASE_URL=https://api.github.com
API_VERSION=2022-11-28
API_TIMEOUT=10000

# Development Configuration
DEV_MOCK_DATA=false
DEV_HOT_RELOAD=false
DEV_DEBUG=false

# Production Configuration
PROD_BUILD_ID=true
PROD_OPTIMIZE_IMAGES=true
PROD_ENABLE_CSP=true

# Security Configuration
ENABLE_CSRF_PROTECTION=true
CSP_NONCE=random-string-here

# Deployment Configuration
DEPLOY_TARGET=github-pages
DEPLOY_BRANCH=main
DEPLOY_PATH=/

# Monitoring
LOG_LEVEL=warn
SENTRY_DSN=

# Email Notifications (Optional - configure as needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=

# Content Delivery
CDN_BASE_URL=
ENABLE_CDN=false

# Database (Optional - for future features)
DATABASE_URL=
REDIS_URL=

# Authentication (Optional - for future features)
NEXTAUTH_URL=
NEXTAUTH_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Search Indexing (Optional)
ALGOLIA_APP_ID=
ALGOLIA_SEARCH_API_KEY=
ALGOLIA_ADMIN_API_KEY=

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
{
  "name": "claude-marketplace-aggregator",
  "version": "0.1.0",
  "description": "An automated, open-source aggregator that discovers and curates Claude Code marketplaces and plugins from across GitHub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "npm run scan:full",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "npx tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "ts-node scripts/security-test.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run test:security && npm run security:audit",
    "scan:marketplaces": "ts-node scripts/scan-marketplaces.ts",
    "validate:plugins": "ts-node scripts/validate-plugins.ts",
    "generate:data": "ts-node scripts/generate-data.ts",
    "scan:full": "npm run scan:marketplaces && npm run generate:data",
    "backup": "ts-node scripts/backup-data.ts",
    "backup:create": "npm run backup backup",
    "backup:list": "npm run backup list",
    "backup:restore": "npm run backup restore",
    "maintenance:health": "curl -s https://claude-marketplace.github.io/aggregator/data/health.json | jq .",
    "maintenance:status": "curl -s https://claude-marketplace.github.io/aggregator/data/status.json | jq .",
    "maintenance:metrics": "curl -s https://claude-marketplace.github.io/aggregator/data/metrics.json | jq .",
    "maintenance:analytics": "curl -s https://claude-marketplace.github.io/aggregator/data/analytics.json | jq .",
    "maintenance:check": "npm run lint && npm run type-check && npm run test && npm run build",
    "maintenance:cleanup": "rm -rf .next node_modules/.cache && npm cache clean --force",
    "performance:test": "npm run build -- --analyze",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "claude",
    "claude-code",
    "marketplace",
    "plugins",
    "aggregator",
    "github",
    "api"
  ],
  "author": "Claude Marketplace Aggregator Contributors",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.1.0",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.7.2",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "isomorphic-dompurify": "^2.29.0",
    "lucide-react": "^0.408.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.2.1",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "puppeteer": "^24.25.0",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shrwnsan/claude-marketplace-registry.git"
  },
  "bugs": {
    "url": "https://github.com/shrwnsan/claude-marketplace-registry/issues"
  },
  "homepage": "https://shrwnsan.github.io/claude-marketplace-registry"
}

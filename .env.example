# Environment Configuration
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=your_github_username

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GITHUB_REPO=claude-marketplace/aggregator

# Scanning Configuration
# Rate limiting for GitHub API (requests per hour)
GITHUB_RATE_LIMIT=5000

# Cache configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Search Configuration
SEARCH_QUERY=claude-plugin+marketplace.json
SEARCH_RESULTS_LIMIT=100
SEARCH_SORT=updated
SEARCH_ORDER=desc

# Plugin Validation
VALIDATION_STRICT_MODE=false
VALIDATION_TIMEOUT=30000

# Data Generation
DATA_REFRESH_INTERVAL=6
MAX_MARKETPLACES=1000
MAX_PLUGINS_PER_MARKETPLACE=500

# Error Handling
ENABLE_ERROR_LOGGING=true
ERROR_NOTIFICATION_WEBHOOK=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
UMAMI_WEBSITE_ID=
UMAMI_URL=

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DARK_MODE=true
ENABLE_SEARCH=true
ENABLE_FILTERING=true
ENABLE_SORTING=true

# API Configuration
API_BASE_URL=https://api.github.com
API_VERSION=2022-11-28
API_TIMEOUT=10000

# Development Configuration
DEV_MOCK_DATA=false
DEV_HOT_RELOAD=true
DEV_DEBUG=false

# Production Configuration
PROD_BUILD_ID=true
PROD_OPTIMIZE_IMAGES=true
PROD_ENABLE_CSP=true

# Security Configuration
ENABLE_CSRF_PROTECTION=true
CSP_NONCE=random-string-here

# Deployment Configuration
DEPLOY_TARGET=github-pages
DEPLOY_BRANCH=main
DEPLOY_PATH=/

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=

# Content Delivery
CDN_BASE_URL=
ENABLE_CDN=false

# Database (Optional - for future features)
DATABASE_URL=
REDIS_URL=

# Authentication (Optional - for future features)
NEXTAUTH_URL=
NEXTAUTH_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Search Indexing (Optional)
ALGOLIA_APP_ID=
ALGOLIA_SEARCH_API_KEY=
ALGOLIA_ADMIN_API_KEY=

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups